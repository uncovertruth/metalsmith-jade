{
  "version": "2.0.2",
  "name": "metalsmith-pug",
  "description": "Metalsmith plugin to convert pug files.",
  "author": "Ahmad Nassri <ahmad@ahmadnassri.com> (https://www.ahmadnassri.com/)",
  "repository": "ahmadnassri/metalsmith-pug",
  "license": "MIT",
  "main": "lib/index.js",
  "keywords": [
    "pug",
    "metalsmith",
    "plugin"
  ],
  "engines": {
    "node": ">=0.10"
  },
  "files": [
    "lib"
  ],
  "bugs": {
    "url": "https://github.com/ahmadnassri/metalsmith-pug/issues"
  },
  "scripts": {
    "codeclimate": "codeclimate < coverage/lcov.info",
    "coverage": "node --harmony ./node_modules/.bin/istanbul cover --dir coverage _mocha -- -R dot",
    "posttest": "npm run coverage",
    "pretest": "standard && echint",
    "test": "mocha --harmony"
  },
  "echint": {
    "ignore": [
      "coverage/**"
    ]
  },
  "devDependencies": {
    "codeclimate-test-reporter": "0.4.0",
    "echint": "^1.5.3",
    "istanbul": "^0.4.4",
    "metalsmith": "^2.1.0",
    "mocha": "^3.1.0",
    "rimraf": "^2.5.3",
    "should": "^11.1.0",
    "standard": "^8.3.0"
  },
  "dependencies": {
    "debug-log": "^1.0.0",
    "pug": "^2.0.0-beta4",
    "xtend": "^4.0.1"
  }
}
